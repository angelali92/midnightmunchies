<h1>Listing restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Lat long</th>
      <th>Phone num</th>
      <th>Hours</th>
      <th>Image url</th>
      <th>Website</th>
      <th>Cost</th>
      <th>Rating</th>
      <th>Type food</th>
      <th>Drive thru</th>
      <th>Delivery</th>
      <th>Market</th>
      <th>Reviews</th>
      <th>Pop items</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.lat_long %></td>
        <td><%= restaurant.phone_num %></td>
        <td><%= restaurant.hours %></td>
        <td><%= restaurant.image_url %></td>
        <td><%= restaurant.website %></td>
        <td><%= restaurant.cost %></td>
        <td><%= restaurant.rating %></td>
        <td><%= restaurant.type_food %></td>
        <td><%= restaurant.drive_thru %></td>
        <td><%= restaurant.delivery %></td>
        <td><%= restaurant.market %></td>
        <td><%= restaurant.reviews %></td>
        <td><%= restaurant.pop_items %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

