 

<h1 class="main"> Eateries </h1> 

<table class="table col-md-9 table-hover">

  <thead>
    <tr>
      <th><%= sortable "name" %><span class="caret"></span></th>
      <th class="pic_text"> Picture </th>
      <th><%= sortable "address" %><span class="caret"></span></th>
      <th><%= sortable "phone_num" %><span class="caret"></span></th>
      <th><%= sortable "website" %><span class="caret"></span></th>
      <th><%= sortable "rating" %><span class="caret"></span></th>
      <th><%= sortable "drive_thru" %><span class="caret"></span></th>
      <th><%= sortable "lobby_hours" %><span class="caret"></span></th>
      <th><%= sortable "lat" %><span class="caret"></span></th>
      <th><%= sortable "long" %><span class="caret"></span></th>
      <th colspan="9"></th>   
    </tr>
  </thead>

  <tbody>
    <% @eateries.each do |eatery| %>
      <tr class= "tBody">
        <td><%= eatery.name %></td>
        <td><img src=<%= eatery.image_url %>></td> 
        <td><%= eatery.address %></td>
        <td><%= eatery.phone_num %></td>
        <td><%= eatery.website %></td>
        <td><%= eatery.rating %></td>
        <td><%= eatery.drive_thru %></td>
        <td><%= eatery.lobby_hours %></td>
        <td><%= eatery.lat %></td>
        <td><%= eatery.long %></td>
        <td><%= link_to "View", eatery %></td>
        <td><%= link_to "Edit", edit_eatery_path(eatery) %></td>
        <td><%= link_to "Favorite", new_favorite_path(eatery) %></td>
      </tr>
    <% end %>
  </tbody>

</table>


<p><%= link_to "New", new_eatery_path, class: "" %></p>
<p><%= link_to "My Account", signin_path %></p>
<p><%= link_to "Sign Out", signout_path , method: "delete" %><p> 





