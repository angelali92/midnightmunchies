<h1>Listing eateries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Lat long</th>
      <th>Phone num</th>
      <th>Hours</th>
      <th>Image url</th>
      <th>Website</th>
      <th>Cost</th>
      <th>Rating</th>
      <th>Type food</th>
      <th>Drive thru</th>
      <th>Delivery</th>
      <th>Market</th>
      <th>Reviews</th>
      <th>Pop items</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @eateries.each do |eatery| %>
      <tr>
        <td><%= eatery.name %></td>
        <td><%= eatery.address %></td>
        <td><%= eatery.lat_long %></td>
        <td><%= eatery.phone_num %></td>
        <td><%= eatery.hours %></td>
        <td><%= eatery.image_url %></td>
        <td><%= eatery.website %></td>
        <td><%= eatery.cost %></td>
        <td><%= eatery.rating %></td>
        <td><%= eatery.type_food %></td>
        <td><%= eatery.drive_thru %></td>
        <td><%= eatery.delivery %></td>
        <td><%= eatery.market %></td>
        <td><%= eatery.reviews %></td>
        <td><%= eatery.pop_items %></td>
        <td><%= link_to 'Show', eatery %></td>
        <td><%= link_to 'Edit', edit_eatery_path(eatery) %></td>
        <td><%= link_to 'Destroy', eatery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

