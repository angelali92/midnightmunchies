<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user, url: signup_path) do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="center">
      <p><%= f.label :email %></p>
      <p class="new_input"><%= f.text_field :email %><br/></p>

      <p><%= f.label :password %></p>
      <p class="new_input"><%= f.password_field :password %><br/></p>

      <p><%= f.label :password_confirmation %></p>
      <p class="new_input"><%= f.password_field :password_confirmation %><br/></p>

      <p><%= f.submit "Sign Up", class: "btn btn-large btn-primary" %></p>

      </div>
    <% end %>

    <div class="center"> <%= link_to "Or Sign In", signin_path %> </div>
  </div>
</div>