<div class="row">
  <div class="span6 offset3">
    <%= form_for @user do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="center_user">
        <p><%= f.label :email %>
        <p><span class="new_input"><%= f.text_field :email %><br/></span>

        <p><%= f.label :password %>
        <p><span class="new_input"><%= f.password_field :password, value: "" %><br/></span>

        <p><%= f.label :password_confirmation %>
        <p><span class="new_input"><%= f.password_field :password_confirmation, value: ""%><br/></span>

        <p class="center_user"><%= f.submit "Update yourself", class: "btn btn-large btn-primary" %> <br/>
      </div>
    <% end %>

    <p class="center_user"><%= link_to "Cancel", @user %></p>
  </div>
</div>